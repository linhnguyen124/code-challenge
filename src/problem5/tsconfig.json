{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "paths": {
          "@/*": ["src/*"]
        },
        "baseUrl": ".",
        "esModuleInterop": true,
        "types": [
          "node",
          "jest"
        ],
        "moduleResolution": "node",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    },
    "lib": [
        "dom", "ES2020",
    ],
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "coverage",
      "doc",
      ".vscode"
    ]
}